@model ChatWebApp.Models.ChangePasswordViewModel
@{
    ViewBag.Title = "Change Password";
}

<div class="main">
    <section class="signup">
        <div class="container">
            <div class="signup">


                <div class="signup-form">
                    <h2 class="form-title">Change Password</h2>
                    @using (Html.BeginForm("ChangePassword", "Manage", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
                    {
                        @Html.AntiForgeryToken()
                        @Html.ValidationSummary("", new { @class = "text-danger" })
                        <div class="form-group">
                            @Html.PasswordFor(m => m.OldPassword, new { @class = "zmdi zmdi-lock", @id = "pass", @placeholder = "Current Password" })
                        </div>
                        <div class="form-group">
                            @Html.PasswordFor(m => m.NewPassword, new { @class = "zmdi zmdi-lock-outline", @id = "re_pass", @placeholder = "New Password" })
                        </div>

                        <div class="form-group">
                            @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "zmdi zmdi-lock-outline", @id = "re_pass", @placeholder = "Confirm Password" })
                        </div>

                        <div class="form-group form-button">
                            <input type="submit" name="signup" id="signup" class="form-submit" value="Register" />
                        </div>
                    }
                </div>
                <div class="table">
                    <figure><img src="\Content\images\sit.png" alt="sing up image"></figure>
                </div>

            </div>
        </div>
    </section>
</div>




@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
