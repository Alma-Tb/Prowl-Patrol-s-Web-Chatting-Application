@{
    ViewBag.Title = "Chat";
}

<h2>Chatting Application</h2>

@using (Ajax.BeginForm("Chat", new AjaxOptions()
{
    HttpMethod = "POST",
    InsertionMode = InsertionMode.InsertAfter,
    UpdateTargetId = "messages"
}))
{
    @Html.TextBox("msg")
    <input type="submit" id="submit" value="Send" />
    <input type="submit" id="refresh" value="Send" style="display: none;" />
}

<div id="messages"></div>
<div class="table">
    <figure><img src="~/Content/images/rayek.png" alt="sign up image"></figure>
</div>

<script src="~/Scripts/functions.js"></script>
