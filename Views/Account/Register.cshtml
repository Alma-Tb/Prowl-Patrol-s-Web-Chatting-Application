@model ChatWebApp.Models.RegisterViewModel
@{
    ViewBag.Title = "Register";
}
<link href="~/Content/style.css" rel="stylesheet" />
<div class="main">
    <section class="signup">
        <div class="container">
            <div class="signup">
                <div class="signup-form">
                    <h2 class="form-title">Register</h2>
                    @using (Html.BeginForm("Register", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
                    {
                        @Html.AntiForgeryToken()
                        @Html.ValidationSummary("", new { @class = "text-danger" })

                        <div class="form-group">
                            @Html.TextBoxFor(m => m.Email, new { @class = "zmdi zmdi-email", @id = "email", @placeholder = "Your Email" })

                        </div>

                        <div class="form-group">
                            @Html.PasswordFor(m => m.Password, new { @class = "zmdi zmdi-lock", @id = "pass", @placeholder = "Password" })
                        </div>

                        <div class="form-group">
                            @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "zmdi zmdi-lock-outline", @id = "re_pass", @placeholder = "Repeat your password" })
                        </div>

                        <div class="form-group form-button">
                            <input type="submit" name="signup" id="signup" class="form-submit" value="Register" />
                        </div>
                    }
                </div>
                <div class="signup-image">
                    <figure><img src="~/Content/images/signup-image.jpg" alt="sing up image"></figure>
                    @Html.ActionLink("Proudly a member", "Login")
                </div>
            </div>
        </div>
    </section>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
